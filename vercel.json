{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php@0.10.0",
      "config": {
        "includeFiles": [
          "app/**",
          "bootstrap/**",
          "config/**",
          "database/**",
          "public/**",
          "resources/**",
          "routes/**",
          "vendor/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ]
}